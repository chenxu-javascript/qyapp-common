<div class="page cached {{selfCls}}" data-page="editor-report">

  {{!date-picker}}
  {{!--
  {{#z-tab-bar as |bar|}}
    {{#bar.item active=true onActive=(action (mut tab) 1)}}
      日报
    {{/bar.item}}
    {{#bar.item onActive=(action (mut tab) 2)}}
      周报
    {{/bar.item}}
    {{#bar.item onActive=(action (mut tab) 3)}}
      月报
    {{/bar.item}}
  {{/z-tab-bar}}

  {{#bottom-bar}}
    <div class="buttons-row">
      <a href="#" class="button button-big button-flat color-gray">取消</a>
      <a href="#" class="button active button-big button-flat">保存</a>
    </div>
  {{/bottom-bar}}
  {{#top-bar}}
    <div class="buttons-row">
      <a href="#" class="button button-big button-flat color-gray">取消</a>
      <a href="#" class="button active button-big button-flat">保存</a>
    </div>
  {{/top-bar}}
  --}}
  <div class="page-content pt0 pb0">

    <div class="content-block-title">
      <div class="fr mr10">
        <a>
          {{#if (is-eq report.type 'weekly')}}
            <span {{action "toReportList" "month"}}>本月计划</span>
          {{else if (is-eq report.type 'day')}}
            <span {{action "toReportList" "weekly"}}>本周计划</span>
          {{/if}}
        </a>
      </div>
      {{report.reportDateTitle}}工作计划
    </div>
    {{#list-block}}
      {{textarea class="edit-plan" placeholder="请填写工作计划" value=report.plan}}
    {{/list-block}}

    <div class="content-block-title">
      <div class="fr mr10">
        <a>
          {{#if (is-eq report.type 'weekly')}}
            <span {{action "toReportList" "weekly"}}>本周工作日报</span>
          {{else if (is-eq report.type 'month')}}
            <span {{action "toReportList" "month"}}>本月工作日报</span>
          {{/if}}
        </a>
      </div>
      {{report.reportDateTitle}}工作总结
    </div>
    {{#list-block}}
      {{textarea class="edit-summary" placeholder="请填写工作总结" value=report.summary}}
    {{/list-block}}

  </div>

  {{#bottom-bar renderInPlace=true classNames="clearfix"}}
    <div class="buttons-row">
      <a href="#" class="button button-big button-flat color-gray" {{action "cancel"}}>取消</a>
      {{async-button class="button active button-big button-flat" action=(action 'save')  default="保存" pending="保存中..."}}
    </div>
  {{/bottom-bar}}


</div>
